<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>



<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.controllers.LoginController"
            prefHeight="390.0" prefWidth="526.0">
    <children>
        <Label layoutX="188.0" layoutY="50.0" prefHeight="50.0" prefWidth="164.0" text="BiteMe Project">
            <font>
                <Font size="22.0" />
            </font>
        </Label>
        
        <Text layoutX="116.0" layoutY="137.0" strokeType="OUTSIDE" strokeWidth="0.0" text="UserName" />
        <TextField fx:id="usernameField" layoutX="189.0" layoutY="130.0" />

        <Text layoutX="116.0" layoutY="205.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password" />
        <TextField fx:id="passwordField" layoutX="189.0" layoutY="198.0" />

        <Button fx:id="btnConnect" layoutX="229.0" layoutY="298.0" mnemonicParsing="false" 
                prefHeight="25.0" prefWidth="70.0" text="Connect" onAction="#onConnectClicked" />
        
        <Button fx:id="btnExit" layoutX="242.0" layoutY="342.0" mnemonicParsing="false" 
                prefHeight="25.0" prefWidth="43.0" text="Exit" onAction="#getExitBtn" />
        
        <Label fx:id="infoLabel" layoutX="155.0" layoutY="246.0" prefHeight="44.0" prefWidth="230.0" />
    </children>
</AnchorPane>
